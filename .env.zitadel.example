# Zitadel Environment Variables for Coolify Deployment
# Copy these to Coolify's Environment Variables section

# ====================================
# Database Configuration
# ====================================
# PostgreSQL connection details (from your separate PostgreSQL resource in Coolify)
ZITADEL_DATABASE_POSTGRES_HOST=zitadel-db
ZITADEL_DATABASE_POSTGRES_PORT=5432
ZITADEL_DATABASE_POSTGRES_DATABASE=zitadel

# Regular user credentials (generate password: openssl rand -base64 16)
ZITADEL_DATABASE_POSTGRES_USER_USERNAME=zitadel_user
ZITADEL_DATABASE_POSTGRES_USER_PASSWORD=CHANGEME_USER_PASSWORD
ZITADEL_DATABASE_POSTGRES_USER_SSL_MODE=disable

# Admin user credentials (must match PostgreSQL admin credentials from Coolify)
ZITADEL_DATABASE_POSTGRES_ADMIN_USERNAME=zitadel_admin
ZITADEL_DATABASE_POSTGRES_ADMIN_PASSWORD=CHANGEME_ADMIN_PASSWORD
ZITADEL_DATABASE_POSTGRES_ADMIN_SSL_MODE=disable

# ====================================
# External Domain Configuration
# ====================================
ZITADEL_EXTERNALDOMAIN=gadgetbot-auth.vellandi.net
ZITADEL_EXTERNALPORT=443
ZITADEL_EXTERNALSECURE=true
ZITADEL_TLS_ENABLED=false

# ====================================
# Master Key (Encryption)
# ====================================
# MUST be exactly 32 characters (generate: openssl rand -hex 16)
ZITADEL_MASTERKEY=CHANGEME_32_CHAR_HEX_STRING

# ====================================
# First Instance Configuration
# ====================================
# These create the initial admin user and organization on first startup
ZITADEL_FIRSTINSTANCE_ORG_NAME=GadgetBot
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_USERNAME=admin
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_PASSWORD=CHANGEME_ADMIN_PASSWORD
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_FIRSTNAME=Admin
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_LASTNAME=User
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_EMAIL=admin@yourdomain.com
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_EMAIL_VERIFIED=true

# ====================================
# Logging
# ====================================
ZITADEL_LOG_LEVEL=info
